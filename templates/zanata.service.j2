[Unit]
Description=The Zanata Web-Based Translation Server
After=syslog.target network.target
Before=httpd.service

[Service]
Environment=LAUNCH_JBOSS_IN_BACKGROUND=1
EnvironmentFile={{ zanata_conf_path }}/zanata.conf
User={{ zanata_user }}
LimitNOFILE=102642
ExecStart={{ zanata_container_install_path }}/bin/standalone.sh -c standalone-zanata.xml -P={{ zanata_conf_path }}/zanata.properties -b $ZANATA_BIND
StandardOutput=null

[Install]
WantedBy=multi-user.target
